        android:layout_gravity="center"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/bar7"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:visibility="invisible"/>

